{
  "name": "rag",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky install",
    "typecheck": "turbo typecheck",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean"
  },
  "devDependencies": {
    "@rag/tsconfig": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "eslint-plugin-perfectionist": "^2.10.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "^1.12.4",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "@react-pdf/fns": "2.0.1",
    "@react-pdf/font": "2.3.7",
    "@react-pdf/image": "2.2.2",
    "@react-pdf/layout": "3.6.3",
    "@react-pdf/pdfkit": "3.0.2",
    "@react-pdf/png-js": "2.2.0",
    "@react-pdf/primitives": "3.0.1",
    "@react-pdf/render": "3.2.7",
    "@react-pdf/renderer": "3.1.14",
    "@react-pdf/stylesheet": "4.1.8",
    "@react-pdf/textkit": "4.2.0",
    "@react-pdf/types": "2.3.4",
    "@react-pdf/yoga": "4.1.2",
    "sharp": "^0.33.0"
  },
  "packageManager": "bun@1.1.0",
  "engines": {
    "node": ">=20"
  }
}
